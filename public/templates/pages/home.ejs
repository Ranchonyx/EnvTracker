<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>EnvTrack - Home</title>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <link rel="stylesheet" href="/styles/home.css">
    <script src="/scripts/home.js" defer></script>
    <script src="/scripts/navbar.js" defer></script>

</head>
<body>
<!-- Footer include -->
<%- include('../blocks/navbar') %>

<!--
{
    stations: [
        station-type,
        station-type
    ]
}
-->
<div class="wrapper">
    <div class="station-container">
        <div class="row">
            <div class="col-9">
                <div class="station-list">
                    <% stations.forEach((station) => { %>
                        <%- include('../ssr/station_large_pane', station); %>
                    <% }); %>
                </div>
            </div>


            <div class="col-3">
                <div class="p-2 rounded shadow-sm sidebar">
                    <h2 class="sidebar-header">Stations-Status</h2>
                    <table class="selected-station-data-table">
                        <tr class="row-temperature">
                            <th>Temperatur (°C)</th>
                            <td>00.00 °C</td>
                        </tr>
                        <tr class="row-humidity">
                            <th>Luftfeuchtigkeit (%)</th>
                            <td>00.00 %</td>
                        </tr>
                        <tr class="row-pressure">
                            <th>Luftdruck (hPa)</th>
                            <td>0000.00 hPa</td>
                        </tr>
                        <tr class="row-cloudy">
                            <th>Bewölkt</th>
                            <td>Ja</td>
                        </tr>
                    </table>

                    <h3 class="mt-4">Empfohlene Pflanzenkulturen</h3>
                    <ul class="list-group">

                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Footer include -->
<%- include('../blocks/footer') %>

</body>
</html>