<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>EnvTrack - Visualisierung</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="/styles/home.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script src="/scripts/viz.js" defer></script>
    <script src="/scripts/navbar.js" defer></script>
    <script src="/scripts/SocketClient.js" defer></script>

</head>
<body>
<!-- Footer include -->
<%- include('../blocks/navbar') %>

<div class="wrapper">
    <div class="container mt-4">
        <div class="row">
            <!-- Top Row: Two Small Cards -->
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h5 class="card-title mb-0">Durchschnittswert</h5>
                    </div>
                    <div class="card-body">
                        <p class="fs-4 text-center" id="averageValue">--</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h5 class="card-title mb-0">Maximalwert</h5>
                    </div>
                    <div class="card-body">
                        <p class="fs-4 text-center" id="maxValue">--</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-header bg-info text-white">
                        <h5 class="card-title mb-0">Minimalwert</h5>
                    </div>
                    <div class="card-body">
                        <p class="fs-4 text-center" id="minValue">--</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <!-- Left Column: Chart -->
            <div class="col mb-4">
                <div class="card h-100">
                    <div class="card-header bg-secondary text-white">
                        <h4 class="card-title mb-0">Sensor Data Visualization</h4>

                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle dropdown-types-toggle" type="button" id="dropdownMenuButtonForTypes"
                                    data-bs-toggle="dropdown"
                                    aria-haspopup="true" aria-expanded="false">
                                Messdatentyp auswählen...
                            </button>
                            <div class="dropdown-menu dropdown-menu-types" aria-labelledby="dropdownMenuButtonForTypes">
                            </div>
                        </div>

                        <div class="dropdown">
                            <button class="btn btn-secondary dropdown-toggle dropdown-groups-toggle" type="button" id="dropdownMenuButtonForGroups"
                                    data-bs-toggle="dropdown"
                                    aria-haspopup="true" aria-expanded="false">
                                Gruppierung auswählen...
                            </button>
                            <div class="dropdown-menu dropdown-menu-groups" aria-labelledby="dropdownMenuButtonForGroups">
                                <a href="#" class="dropdown-item">MINUTE</a>
                                <a href="#" class="dropdown-item">HOUR</a>
                                <a href="#" class="dropdown-item">HOUR_AND_MINUTE</a>
                            </div>
                        </div>
                    </div>
                    <form>
                        <label for="date-from">Von</label>
                        <input type="date" id="date-from" name="date-from">
                        <label for="date-to">Bis</label>
                        <input type="date" id="date-to" name="date-to">
                    </form>
                    <div class="card-body">
                        <!-- Add a custom class for styling -->
                        <canvas id="sensorChart" class="w-100" style="max-height: 500px;"></canvas>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Footer include -->
<%- include('../blocks/footer') %>

</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</html>